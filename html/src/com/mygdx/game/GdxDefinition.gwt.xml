<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
	<inherits name='com.artemis.backends.artemis_backends_gwt' />
	<inherits name='net.mostlyoriginal.ContribJam' />
	<inherits name='net.mostlyoriginal.ContribEventBus' />

	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.component" />
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.system.graphics" />
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.system.passive" />
	
    <source path="com.mygdx.game" />
    <source path="com.mygdx.game.main" />
    <source path="com.mygdx.game.manager" />
    <source path="com.mygdx.game.system.graphics" />
    <source path="com.mygdx.game.system.passive" />

	<inherits name='CapismGame' />
	<entry-point class='com.mygdx.game.client.HtmlLauncher' />
	
	<set-configuration-property name="gdx.assetpath" value="../core/assets" />
	<set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
</module>
